{
    "name": "@repo/shared",
    "version": "1.0.0",
    "main": "./dist/index.js",
    "exports": {
        ".": {
            "import": "./src/index.ts",
            "require": "./dist/index.js",
            "node": "./dist/index.js",
            "default": "./src/index.ts"
        }
    },
    "types": "./src/index.ts",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build": "NODE_ENV=production tsc -p ./tsconfig.build.json",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "test": "NODE_ENV=development jest --passWithNoTests",
        "test:watch": "NODE_ENV=development jest --watch"
    },
    "dependencies": {
        "date-fns": "^3.6.0",
        "sqlite3": "^5.1.7",
        "ts-loader": "^9.5.1",
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
